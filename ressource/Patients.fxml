                <Button fx:id="removeButton" disable="true" mnemonicParsing="false" onAction="#removeAction" prefHeight="35.0" prefWidth="120.0" text="Supprimer -" GridPane.columnIndex="1" GridPane.halignment="CENTER" />
            </children>
        </GridPane>
        <GridPane layoutX="16.0" layoutY="13.0" prefHeight="79.0" prefWidth="460.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="156.0" minWidth="10.0" prefWidth="152.0" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="148.0" minWidth="10.0" prefWidth="125.0" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="183.0" minWidth="10.0" prefWidth="183.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <DatePicker fx:id="birthDatePicker" prefHeight="31.0" prefWidth="213.0" promptText="Date de naissance" GridPane.columnIndex="2">
                    <GridPane.margin>
                        <Insets right="10.0" />
                    </GridPane.margin>
                </DatePicker>
                <ComboBox fx:id="genderComboBox" prefHeight="31.0" prefWidth="96.0" promptText="Genre" GridPane.columnIndex="1">
                    <GridPane.margin>
                        <Insets left="10.0" right="10.0" />
                    </GridPane.margin>
                </ComboBox>
                <TextField fx:id="initialesField" prefHeight="31.0" prefWidth="70.0" promptText="Initiales">
                    <GridPane.margin>
                        <Insets left="10.0" right="10.0" />
                    </GridPane.margin>
                </TextField>
                <Button fx:id="addPatientButton" disable="true" mnemonicParsing="false" onAction="#addPatientAction" prefHeight="35.0" prefWidth="100.0" text="Ajouter" GridPane.rowIndex="1">
                    <GridPane.margin>
                        <Insets left="10.0" />
                    </GridPane.margin>
                </Button>
            </children>
        </GridPane>
    </children>
</AnchorPane>
