<AnchorPane prefHeight="500.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="src.controller.PatientsController">
    <children>
        <TableView layoutX="28.0" layoutY="101.0" prefHeight="325.0" prefWidth="460.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0">
            <columns>
                <TableColumn maxWidth="153.0" minWidth="153.0" prefWidth="153.0" resizable="false" text="Initiales" />
                <TableColumn maxWidth="153.0" minWidth="153.0" prefWidth="153.0" resizable="false" text="Genre" />
                <TableColumn maxWidth="154.0" minWidth="154.0" prefWidth="154.0" resizable="false" text="Date de naissance" />
            </columns>
        </TableView>
        <GridPane layoutX="30.0" layoutY="437.0" prefHeight="57.0" prefWidth="440.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Button fx:id="chooseButton" mnemonicParsing="false" onAction="#chooseAction" prefHeight="35.0" prefWidth="120.0" text="Choisir" GridPane.halignment="CENTER" GridPane.valignment="CENTER" />
