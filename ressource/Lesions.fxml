<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="600.0" prefWidth="800.0" stylesheets="@Style.css"
            xmlns="http://javafx.com/javafx/8.0.121" fx:controller="src.controller.LesionsController">
    <Button fx:id="returnButton" layoutX="14.0" layoutY="14.0" mnemonicParsing="false" onAction="#returnAction"
            prefHeight="33.0" prefWidth="100.0" text="Retour" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="15.0"/>
    <TableView fx:id="lesionsTable" layoutX="16.0" layoutY="121.0" prefHeight="384.0" prefWidth="760.0"
               AnchorPane.bottomAnchor="155.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0"
               AnchorPane.topAnchor="60.0">
        <placeholder>
            <Label text="La table est vide"/>
        </placeholder>
        <columns>
            <TableColumn fx:id="lesionSite" maxWidth="380.0" minWidth="380.0" prefWidth="380.0" resizable="false"
                         text="Site"/>
            <TableColumn fx:id="lesionDiag" maxWidth="380.0" minWidth="380.0" prefWidth="380.0" resizable="false"
                         text="Diagnostic"/>
        </columns>
    </TableView>
    <GridPane layoutX="20.0" layoutY="479.0" prefHeight="119.0" prefWidth="760.0" AnchorPane.bottomAnchor="20.0"
              AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="430.0" minWidth="0.0" prefWidth="357.0"/>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="381.0" minWidth="0.0" prefWidth="359.0"/>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="381.0" minWidth="10.0" prefWidth="359.0"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        </rowConstraints>
        <Button fx:id="siteCutaneButton" disable="true" mnemonicParsing="false" onAction="#siteCutaneAction"
                prefHeight="40.0" prefWidth="827.0" text="Site cutané" GridPane.columnIndex="1"
                GridPane.valignment="TOP">
            <GridPane.margin>
                <Insets left="10.0" right="10.0"/>
            </GridPane.margin>
            <font>
                <Font size="18.0"/>
            </font>
        </Button>
        <Button fx:id="histologicLamellaButton" disable="true" mnemonicParsing="false"
                onAction="#histologicLamellaAction" prefHeight="40.0" prefWidth="497.0" text="Lame histologique"
                GridPane.columnIndex="2" GridPane.valignment="TOP">
            <GridPane.margin>
                <Insets left="10.0" right="10.0"/>
            </GridPane.margin>
            <font>
                <Font size="18.0"/>
            </font>
        </Button>
        <Button fx:id="photosButton" disable="true" mnemonicParsing="false" onAction="#photosAction" prefHeight="40.0"
                prefWidth="511.0" text="Télécharger photos" GridPane.valignment="TOP">
            <GridPane.margin>
                <Insets left="10.0" right="10.0"/>
            </GridPane.margin>
            <font>
                <Font size="18.0"/>
            </font>
        </Button>
        <Button fx:id="addButton" mnemonicParsing="false" onAction="#addAction" prefHeight="45.0" prefWidth="467.0"
                text="Ajouter +" GridPane.rowIndex="1">
            <GridPane.margin>
                <Insets left="25.0" right="25.0"/>
            </GridPane.margin>
            <font>
                <Font size="20.0"/>
            </font>
        </Button>
        <Button fx:id="removeButton" disable="true" mnemonicParsing="false" onAction="#removeAction" prefHeight="45.0"
                prefWidth="412.0" text="Supprimer -" GridPane.columnIndex="1" GridPane.rowIndex="1">
            <GridPane.margin>
                <Insets left="25.0" right="25.0"/>
            </GridPane.margin>
            <font>
                <Font size="20.0"/>
            </font>
        </Button>
        <Button fx:id="editButton" disable="true" mnemonicParsing="false" onAction="#editAction" prefHeight="45.0"
                prefWidth="629.0" text="Modifier" GridPane.columnIndex="2" GridPane.rowIndex="1">
            <GridPane.margin>
                <Insets left="25.0" right="25.0"/>
            </GridPane.margin>
            <font>
                <Font size="20.0"/>
            </font>
        </Button>
    </GridPane>
</AnchorPane>
